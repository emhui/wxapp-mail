/* pages/cart/cart.wxss */
.main {
  position: relative;
  height: 100%;
}

.goods-list-wrapper {
  display: flex;
  justify-content: space-around;
  border-bottom: 2rpx solid #eee;
}

.goods-selected {
  position: relative;
}

.goods-selected-icon {
  position: absolute;
  top: 50%;
  left: 50%;
}

.goods-item-image {
  width: 200rpx;
  height: 200rpx;
}

.goods-item-main {
  flex: 0 0 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 36rpx;
}

.goods-item-main-top {
  display: flex;
  justify-content: space-between;
}

.goods-item-main-top-name {}

.goods-item-main-top-price {}

.goods-item-main-bottom {
  display: flex;
  justify-content: space-between;
}

.goods-item-main-bottom-op {}

.oods-item-main-bottom-delete {
  flex: 0 0 60%;
}

.account-wrapper{
  position: fixed;
  background-color: #99CC66;
  bottom: 0;
  left: 0;
  height: 100rpx;
  color: white;
  width: 100%;
  font-size: 36rpx;
}

.goods-all-selected-icon{
  top: 0;
  left: 0;
  position: relative;
}

.fill-gap{
  flex: 0 0 30%;
}

.empty{
  color: #99CC66;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.goods-selected-bottom{

  position: absolute;
  left: 20rpx;
  bottom: 25rpx;
}

.account-all-select-text{
 
  position: absolute;
  left: 100rpx;
  bottom: 20rpx;
}

.account-all-num{
  position: absolute;
  right: 100rpx;
  bottom: 20rpx;
}

.account-all-icon{
  position: absolute;
  right: 20rpx;
  bottom: 15rpx;
}