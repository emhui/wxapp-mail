.new-list{
  display: grid;
  grid-template-columns: 1fr 1fr;
  justify-items: center;
}

.new-item{
  width: 330rpx;
  height: 330rpx;
  background-color: #f5f6f5;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 10rpx;
  margin: 10rpx 0;
  line-height: 1.8;
}

.new-title-wrapper{
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}

.new-image{
  width: 175rpx;
  height: 175rpx;
}

