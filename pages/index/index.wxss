.select-wrapper{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.select-title{
  display: flex;
  justify-content: center;
  color: #99CC66;
  line-height: 2;
}

.select-top{
  width: 100%;
  display: flex;
  justify-content: space-around;
}

