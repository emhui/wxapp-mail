/* pages/order/order.wxss */

.main{
  width: 100%;
  height: 100vh;
}

order-list{
  height: 90vh;
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}

.order-item{
  display: flex;
  border-bottom: 4rpx solid #eee;
}

.order-item-image{
  width: 175rpx;
  height: 175rpx;
}

.order-item-main{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.order-item-name{
  font-weight: 500;
}

.order-item-price{
  
}

.order-item-num{
  
}

.order-footer{
  height: 10vh;
  width: 100%;
  position: absolute;
  background-color: #eee;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
}

.order-sum{
  flex: 1;
  color: #ff6666;
}

.order-pay{
  height: 100%;
  flex: 0 0 30%;
  color: white;
  background-color: #99cc66;
  display: flex;
  justify-content: center;
  align-items: center;
}

.info-wrapper{
  display: flex;
  min-height: 8vh;
  width: 100%;
  border-bottom: 10rpx solid #eee ;
  justify-content: space-between;
  align-items: center;
  color: #adadad;
}

.info{
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 10rpx;
  font-size: 30rpx;
}

.info-main{
  display: flex;
  justify-content: space-between;
}

.info-name{

}

.info-tel{

}

.info-address{

}

.info-goto-icon{
  width: 20vw;
  margin: 0 20rpx;
}

.info-empty{
  display: flex;
  justify-content: center;
  align-items: center;
}